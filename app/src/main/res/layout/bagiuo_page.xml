<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient">

    <ScrollView
        android:id="@+id/scrollView5"
        android:scrollbars="none"
        android:layout_width="wrap_content"
        android:layout_height="734dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="412dp"
                android:layout_height="164dp"
                app:srcCompat="@drawable/bagiuopicpage1" />

            <TextView
                android:id="@+id/textView20"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/cabin_condensed_bold"
                android:paddingHorizontal="30dp"
                android:text="Baguio"
                android:textColor="#000000"
                android:textSize="48sp" />

            <TextView
                android:id="@+id/textView21"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="Baguio, a mountain town in the Philippines, is known as the “City of Pines.” It's popular for its universities, resorts, and cooler summer weather. Burnham Park and Baguio Cathedral are central attractions. Session Road offers shopping and dining. Its high elevation, about 4,810 feet above sea level, gives it a cool climate and lush pine forests, earning it the title &quot;Summer Capital of the Philippines&quot; and &quot;City of Pines.&quot;"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/textView22"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cabin_condensed_bold"
                android:text="What's around Baguio"
                android:textColor="#000000"
                android:textSize="40sp" />

            <ImageView
                android:id="@+id/imageView10"
                android:layout_width="360dp"
                android:layout_height="164dp"
                app:srcCompat="@drawable/burnham" />

            <TextView
                android:id="@+id/textView23"
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="80dp"
                android:fontFamily="@font/cabin_condensed_bold"
                android:text="Burnham Park"
                android:textColor="#000000"
                android:textSize="34sp" />

            <ImageView
                android:id="@+id/imageView12"
                android:layout_width="360dp"
                android:layout_height="164dp"
                app:srcCompat="@drawable/minesview1" />

            <TextView
                android:id="@+id/textView24"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:fontFamily="@font/cabin_condensed_bold"
                android:text="Mines View Observation Deck"
                android:textColor="#000000"
                android:textSize="34sp" />

            <ImageView
                android:id="@+id/imageView16"
                android:layout_width="360dp"
                android:layout_height="164dp"
                app:srcCompat="@drawable/botanical" />

            <TextView
                android:id="@+id/textView26"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:fontFamily="@font/cabin_condensed_bold"
                android:text="Baguio Botanical Garden"
                android:textColor="#000000"
                android:textSize="34sp" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>