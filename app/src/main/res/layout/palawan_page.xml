<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient">

    <ScrollView
        android:scrollbars="none"
        android:id="@+id/scrollView5"
        android:layout_width="wrap_content"
        android:layout_height="734dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="412dp"
                android:layout_height="164dp"
                app:srcCompat="@drawable/palawanpicpage" />

            <TextView
                android:id="@+id/textView20"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/cabin_condensed_bold"
                android:paddingHorizontal="30dp"
                android:text="Palawan"
                android:textColor="#000000"
                android:textSize="48sp" />

            <TextView
                android:id="@+id/textView21"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="  Palawan, an archipelagic province in the Philippines, is located on the country's western edge and bordered by the South China Sea, Sulu Sea, Mindoro Island, and Borneo. Part of the Mimaropa Region, it features 1,780 islands and islets with pristine beaches and lagoons.Palawan, an archipelagic province in the Philippines, is located on the country's western edge and bordered by the South China Sea, Sulu Sea, Mindoro Island, and Borneo. Part of the Mimaropa Region, it features 1,780 islands and islets with pristine beaches and lagoons."
                android:textColor="#000000" />

            <TextView
                android:id="@+id/textView22"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cabin_condensed_bold"
                android:text="What's around Palawan"
                android:textColor="#000000"
                android:textSize="40sp" />

            <ImageView
                android:id="@+id/imageView10"
                android:layout_width="360dp"
                android:layout_height="164dp"
                app:srcCompat="@drawable/kayangan" />

            <TextView
                android:id="@+id/textView23"
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="80dp"
                android:fontFamily="@font/cabin_condensed_bold"
                android:text="Kayangan Lake"
                android:textColor="#000000"
                android:textSize="34sp" />

            <ImageView
                android:id="@+id/imageView12"
                android:layout_width="360dp"
                android:layout_height="164dp"
                app:srcCompat="@drawable/tubbatahareef" />

            <TextView
                android:id="@+id/textView24"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="80dp"
                android:fontFamily="@font/cabin_condensed_bold"
                android:text="Tubbataha Reef"
                android:textColor="#000000"
                android:textSize="34sp" />

            <ImageView
                android:id="@+id/imageView16"
                android:layout_width="360dp"
                android:layout_height="164dp"
                app:srcCompat="@drawable/puerto1" />

            <TextView
                android:id="@+id/textView26"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="80dp"
                android:fontFamily="@font/cabin_condensed_bold"
                android:text="Puerto Pricesa Underground River"
                android:textColor="#000000"
                android:textSize="34sp" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>